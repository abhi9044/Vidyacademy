<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_selector"
    >

    <!-- Single ListItem -->

    <!-- Product Name -->
    <TextView android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:textSize="16dip"
        android:text="Testname"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/subevent_id"
        android:layout_toEndOf="@+id/subevent_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/subevent_id"
        android:textColor="#000000"
        android:textSize="11sp"
        android:layout_toLeftOf="@+id/checkBoxmulti"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBoxmulti"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/typealias"
        android:visibility="gone"
        android:layout_alignBottom="@+id/patient_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/checkBoxmulti"
        android:focusable="false"
        android:focusableInTouchMode="false"

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="44"
        android:id="@+id/subeventprice"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/checkBoxmulti"
        android:layout_toStartOf="@+id/checkBoxmulti"
        android:layout_marginRight="3dp" />

</RelativeLayout>