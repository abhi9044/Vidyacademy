<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="5dp"
        android:background="@drawable/list_item"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/feed_item_padding_top_bottom"
        android:paddingTop="@dimen/feed_item_padding_top_bottom"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/lab_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:singleLine="false"
                                        android:text="Central Lab  "
                                        android:textColor="#606B6C"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:typeface="sans" />
                                    <TextView
                                        android:id="@+id/labInfoIcon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:singleLine="false"
                                        android:text="@string/infoFontAwesome"
                                        android:textColor="#606B6C"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/nabl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dip"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="NABL Accredited"
                                    android:textColor="#606B6C"
                                    android:textSize="12sp"
                                    android:textStyle="italic"
                                    android:typeface="sans" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rating_circle"
                                android:layout_width="35dip"
                                android:layout_height="35dip"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="5dip"

                                android:background="@drawable/roundboundry"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/rating"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:singleLine="false"
                                    android:text="4.1"
                                    android:textColor="@color/transparent"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:typeface="sans" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lab_add"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:ellipsize="end"
                            android:singleLine="false"
                            android:text="ADDRESS"
                            android:textColor="#7f8c8d"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:id="@+id/lab_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dip"
                                android:ellipsize="end"
                                android:singleLine="false"
                                android:text="24, Ground Floor, Glen Rose Building"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:typeface="sans" />


                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvhcharges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Home Collection Charges"
                        android:textColor="#7f8c8d"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:typeface="sans"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/cost"
                            android:layout_marginLeft="1dp"
                            android:layout_toEndOf="@+id/cost"
                            android:layout_toRightOf="@+id/cost"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Rs 5000"
                            android:textColor="#7f8c8d"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/saving"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/mrp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginStart="41dp"
                            android:layout_toEndOf="@+id/mrp"
                            android:layout_toRightOf="@+id/mrp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="60% OFF"
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp"
                            android:typeface="sans" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/pricelay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pricehead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dip"
                            android:ellipsize="end"
                            android:singleLine="false"
                            android:text="Price: "
                            android:textColor="#7f8c8d"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:typeface="sans"

                            />

                        <TextView
                            android:id="@+id/cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/pricehead"
                            android:layout_toEndOf="@+id/pricehead"
                            android:layout_toRightOf="@+id/pricehead"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Rs 4000 "
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <Button
                            android:id="@+id/selectlab"
                            android:layout_width="85dp"
                            android:layout_height="34dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/buttonbookbackground"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text="BOOK"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/homeCollectionPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Free home collection"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pricePerTest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CBC-300"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>


