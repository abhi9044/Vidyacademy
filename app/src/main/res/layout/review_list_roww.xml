<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dip"
    android:paddingRight="10dip">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOP REVIEWS"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="12dip"
        android:layout_marginTop="5dip"
        android:ellipsize="end"
        android:singleLine="false"
        android:layout_marginLeft="150dip"
        android:textStyle="bold"/>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginTop="5dip">

            <LinearLayout
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:orientation="horizontal"
                android:background="@drawable/roundboundary_black">

            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_reviewer"
            android:src="@drawable/lab_image_bg"
            android:layout_gravity="center_horizontal" />
</LinearLayout>
    <TextView
        android:id="@+id/reviewer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yasha Gupta"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="12dip"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="30dip"
        android:ellipsize="end"
        android:singleLine="false"
        android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:orientation="horizontal"
            android:layout_marginLeft="5dip"
            android:background="@drawable/roundboundry">
            <TextView
                android:id="@+id/rating_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 4.1"
                android:textColor="@color/transparent"
                android:typeface="sans"
                android:textSize="8dip"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:textStyle="bold"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/review_date"
            android:layout_marginLeft="160dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13 May"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="12sp"
            android:layout_marginTop="5dip"
            android:layout_marginRight="20dip"
            android:ellipsize="end"
            android:singleLine="false"
            android:textStyle="normal"/>
</LinearLayout>
        <TextView
        android:id="@+id/review"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:text="The lab was very comfortable. I am a daredevil now!wohoo"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="12dip"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="50dip"
        android:ellipsize="end"
        android:singleLine="false"
        android:textStyle="normal"/>
        </LinearLayout>

</LinearLayout>