<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:background="@color/windowBackground"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ListView
            android:layout_width="fill_parent"
            android:id="@+id/list_pastorders"
            android:background="@color/listviewbg"
            android:layout_height="fill_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dp"
            android:layout_weight="8"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/no_order"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
           android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/dark_grey"
            android:text="Nothing booked yet. Why not now?"
            android:id="@+id/assistance" />

        <Button android:id="@+id/go_test_but_f"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_alignParentBottom="true"
            android:text="BOOK A TEST"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            />
        <Button android:id="@+id/go_pharmacy_but_f"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_alignParentBottom="true"
            android:text="EXPLORE MORE"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            />

    </LinearLayout>

</RelativeLayout>


