<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@drawable/list_selector"
    >

    <!-- Single ListItem -->

    <!-- Product Name -->
    <TextView android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:textSize="16dip"
        android:text="Patient_Name -"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/subevent_id"
        android:layout_toEndOf="@+id/subevent_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/subevent_id"
        android:textColor="#000000"
        android:textSize="11sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/typealias"
        android:visibility="gone"
        android:layout_alignBottom="@+id/patient_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone Number"
        android:id="@+id/patient_number"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/patient_name"
        android:layout_toEndOf="@+id/patient_name"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="id"
        android:id="@+id/patient_id"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/patient_number"
        android:layout_toEndOf="@+id/patient_number"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="address"
        android:id="@+id/patient_address"
        android:layout_alignBottom="@+id/patient_name"
        android:layout_toRightOf="@+id/patient_id"
        android:layout_toEndOf="@+id/patient_id"
        android:visibility="gone" />

</RelativeLayout>