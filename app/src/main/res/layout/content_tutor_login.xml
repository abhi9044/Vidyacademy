<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarOTP"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/relativeLayoutOTP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.holamed.meddapp.OTPVerifyActivity"
        android:layout_gravity="right|top">

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="Enter number here"
            android:inputType="phone"
            android:visibility="visible" />

        <RelativeLayout
            tools:context="com.holamed.meddapp.OTPVerifyActivity"
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_gravity="right|top"
            android:visibility="visible"
            android:layout_above="@+id/bSubmittutor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                tools:context="com.holamed.meddapp.OTPVerifyActivity"
                android:id="@+id/relativeLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_gravity="right|top"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <Button
                    android:id="@+id/bSubmittutor"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:layout_marginBottom="122dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please verify your mobile number"
                    android:id="@+id/textView16"
                    android:textSize="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="83dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You will get a OTP via sms"
                    android:id="@+id/textView19"
                    android:textSize="18dp"
                    android:layout_below="@+id/textView16"
                    android:layout_alignRight="@+id/bSubmittutor"
                    android:layout_alignEnd="@+id/bSubmittutor" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
