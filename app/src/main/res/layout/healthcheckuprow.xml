                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RelativeLayout
                            android:id="@+id/pricelay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/pricehead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dip"
                                android:ellipsize="end"
                                android:singleLine="false"
                                android:text="Price: "
                                android:textColor="#7f8c8d"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:typeface="sans"

                                />

                            <TextView
                                android:id="@+id/cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/pricehead"
                                android:layout_toEndOf="@+id/pricehead"
                                android:layout_toRightOf="@+id/pricehead"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="Rs 4000 "
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/mrp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/cost"
                                android:layout_marginLeft="1dp"
                                android:layout_toEndOf="@+id/cost"
                                android:layout_toRightOf="@+id/cost"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="Rs 5000"
                                android:textColor="#7f8c8d"
                                android:textSize="12sp"
                                android:textStyle="normal"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/saving"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/mrp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="41dp"
                                android:layout_toEndOf="@+id/mrp"
                                android:layout_toRightOf="@+id/mrp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="60% OFF"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp"
                                android:typeface="sans" />

                            <Button
                                android:id="@+id/bookhealth"
                                android:layout_width="85dp"
                                android:layout_height="34dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/buttonbookbackground"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:text="BOOK"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/pricelay">

                            <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            </LinearLayout>



</LinearLayout>


                    </RelativeLayout>

