                                android:textStyle="bold"
                                android:typeface="sans"
                                android:id="@+id/deal_name"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:text="Central Lab"
                                android:ellipsize="end"
                                android:singleLine="false"
                                />

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.5"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:id="@+id/main_lab"
                                android:textColor="@color/black"
                                android:text="at "
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Number of tests-"
                                android:id="@+id/tvnumtests"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="+Click here for details"
                                android:id="@+id/packageDetails"
                                android:textColor="#000000"
                                android:textIsSelectable="true"
                                android:textSize="14sp"
                                android:layout_marginTop="8dip" />

                            <TextView
                                android:id="@+id/description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24, Ground Floor, Glen Rose Building"
                                android:textColor="@color/black"
                                android:typeface="sans"
                                android:textSize="14sp"
                                android:layout_marginTop="10dip"
                                android:ellipsize="end"
                                android:visibility="gone"
                                android:singleLine="false"
                                android:textStyle="normal"/>




                        </LinearLayout>

                    </LinearLayout>
