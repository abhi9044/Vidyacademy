<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ac_boolean_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/checkmark_24"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/airconditioning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air conditioning"
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="12dip"
                    android:layout_marginTop="5dip"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textStyle="normal"/>

                <ImageView
                    android:id="@+id/homecollection_boolean_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/mutliply_filled_25"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/homecollection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home collection"
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="12dip"
                    android:layout_marginTop="5dip"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textStyle="normal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ambulance_boolean_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/mutliply_filled_25"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/ambulance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambulance"
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="12dip"
                    android:layout_marginTop="5dip"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textStyle="normal"/>

                <ImageView
                    android:id="@+id/cc_accept_boolean_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dip"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/checkmark_24"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/creditcardsaccepted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cards Accepted"
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="12dip"
                    android:layout_marginTop="5dip"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textStyle="normal"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

