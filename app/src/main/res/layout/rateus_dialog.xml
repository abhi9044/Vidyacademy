<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_width="318dp"
    android:layout_height="250dp"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rate Us"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How did you like our services?"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="58dp"
        android:textColor="#A9A9A9" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imgbok"
        android:src="@drawable/yes"
        android:background="#ffffff"
        android:layout_marginTop="31dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="25dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgbgood"

        android:layout_alignTop="@+id/imgbok"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:background="#ffffff"
        android:src="@drawable/no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Needs Work!"
        android:id="@+id/textView12"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignLeft="@+id/imgbgood"
        android:layout_alignStart="@+id/imgbgood"
        android:layout_alignRight="@+id/imgbgood"
        android:layout_alignEnd="@+id/imgbgood"
        android:textAlignment="center"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="I loved it!"
        android:id="@+id/textView15"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/imgbok"

        android:layout_marginRight="0dp"
        android:layout_marginLeft="220dp" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/rclose"
        android:src="@drawable/cross"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />

</RelativeLayout>