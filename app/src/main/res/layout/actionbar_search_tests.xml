<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dip"
    android:background="@color/primary"
    android:orientation="horizontal">

    <!-- android:gravity="center"-->
    <ImageView
        android:id="@+id/back_pressed"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:src="@drawable/icback"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <Button
        android:id="@+id/bcityselect"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/back_pressed"
        android:layout_toRightOf="@+id/back_pressed"
        android:background="@drawable/city_button_layout"
        android:text="City"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cart"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:src="@drawable/iccart" />

    <TextView
        android:id="@+id/tvcart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_alignEnd="@+id/cart"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/cart"
        android:layout_marginRight="3dp"
        android:text="0"
        android:background="@drawable/iccartnumber"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:textStyle="bold" />
</RelativeLayout>
